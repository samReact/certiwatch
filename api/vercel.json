{
  "builds": [
    {
      "src": "*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/.*",
      "methods": ["OPTIONS"],
      "dest": "/api/.*"
    }
  ],
  "headers": [
    {
      "source": "/api/.*",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://certiwatch-psi.vercel.app"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "OPTIONS, GET, POST, PUT, DELETE"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type"
        },
        {
          "key": "Access-Control-Max-Age",
          "value": "86400"
        }
      ]
    }
  ]
}
